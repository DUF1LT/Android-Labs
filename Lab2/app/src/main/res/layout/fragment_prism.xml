<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrismFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5"
        android:padding="40dp"
        android:useDefaultMargins="true">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:text="@string/site_length_input_name"/>

        <EditText
            android:id="@+id/siteLengthPrismInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:maxEms="3"
            android:maxLength="3"
            android:inputType="number"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:text="@string/height_input_name"/>

        <EditText
            android:id="@+id/heightPrismInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:maxEms="3"
            android:maxLength="3"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:text="@string/result_name"/>

        <EditText
            android:id="@+id/resultPrismText"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxEms="3"
            android:text="0"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="376dp"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:src="@drawable/prism" />
    </GridLayout>

</FrameLayout>