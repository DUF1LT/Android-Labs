<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PyramidFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="20dp"
        android:useDefaultMargins="true">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/site_length_input_name"/>

        <EditText
            android:id="@+id/siteLengthPyramidInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:maxEms="3"
            android:maxLength="3"
            android:layout_column="1"
            android:layout_row="0"
            android:inputType="number"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/height_input_name"/>

        <EditText
            android:id="@+id/heightPyramidInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0"
            android:maxEms="3"
            android:maxLength="3"
            android:layout_column="1"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:layout_column="0"
            android:text="@string/result_name"/>

        <EditText
            android:id="@+id/resultPyramidText"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:ems="10"
            android:maxEms="3"
            android:text="0"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="194dp"
            android:layout_height="169dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:src="@drawable/pyramid" />
    </GridLayout>

</FrameLayout>